{
  "name": "gitgpt",
  "displayName": "GitGPT",
  "description": "GitGPT is a powerful and intuitive VS Code extension designed to streamline your code review process. Leveraging the advanced capabilities of OpenAI's GPT model, GitGPT automatically generates insightful and context-aware comments for your commits based on the diff.",
  "version": "0.0.2",
  "publisher": "ImanReihanian",
  "repository": {
    "type": "git",
    "url": "https://github.com/0x11c11e/GitGPT.git"
  },
  "keywords": [
    "git",
    "commit",
    "message",
    "GPT-3",
    "OpenAI",
    "automation",
    "code",
    "development",
    "auto"
  ],
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:gitgpt"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitgpt",
        "title": "Generate Commit Message"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "simple-git": "^3.19.1"
  }
}
